{
  "env": {
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-undef": "off",
    "indent": ["error", "tab"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "eol-last": "error"
  }
}
